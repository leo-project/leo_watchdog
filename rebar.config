{require_otp_vsn, "R16B*|17|18"}.

{deps, [
        {leo_commons, "1.*", {git, "https://github.com/leo-project/leo_commons.git", {tag, "1.1.6"}}},
        {elarm, ".*", {git, "https://github.com/leo-project/elarm.git", "5953a2f7b0623085b4fc2d8f477f99652136d950"}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warnings_as_errors,
            warn_shadow_vars
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
